			    			pos_hint: {"x":-2.2, "y":-0.73}
			    		Image:
			    			id: I_F
							source: "image/tend/front.png"
							color: 0,0,0,0
			    			pos_hint: {"x":-2.2, "y":-0.73}
			    		Image:
			    			id: I_F_1
